<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iigo.paintshader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LinearGradientActivity"/>

        <activity android:name=".NeonLightActivity"/>

        <activity android:name=".BitmapShaderActivity"/>

        <activity android:name=".BitmapShaderInvertActivity"/>

        <activity android:name=".ComposeShaderActivity"/>

        <activity android:name=".RadialGradientActivity"/>

        <activity android:name=".SweepGradientActivity"/>

        <activity android:name=".SweepGradientRadarActivity"/>

    </application>

</manifest>